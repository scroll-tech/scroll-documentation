---
import NavCard from "~/components/NavCard.astro"
import StartSvg from "~/assets/svgs/home/home-start.svg?raw"
import DevelopSvg from "~/assets/svgs/home/home-develop.svg?raw"
import TechnologySvg from "~/assets/svgs/home/home-technology.svg?raw"
import LearnSvg from "~/assets/svgs/home/home-learn.svg?raw"
import SectionHeader from "~/components/SectionHeader/index.astro"

const navList = [
  {
    icon: StartSvg,
    name: "Primeiros Passos",
    content: "Conecte-se à Scroll e explore nosso ecossistema de dApps.",
    link: "/pt/getting-started/overview",
  },
  {
    icon: DevelopSvg,
    name: "Desenvolvedores",
    content: "Explore a documentação para desenvolvedores da Scroll.",
    link: "/pt/developers",
  },
  {
    icon: TechnologySvg,
    name: "Tecnologia",
    content: "Uma visão geral da arquitetura zkEVM da Scroll.",
    link: "/pt/technology",
  },
  {
    icon: LearnSvg,
    name: "Aprenda",
    content: "Uma introdução ao mundo de ZK e escalabilidade.",
    link: "/pt/learn",
  },
]
---

<div class="navigate">
  <SectionHeader title="Navegue pela Documentação" content="Comece a desenvolver na Scroll hoje." />
  <div class="navs">
    {navList.map(({ icon, name, content, link }) => <NavCard icon={icon} name={name} content={content} link={link} />)}
  </div>
</div>

<style>
  .navigate {
    margin-top: 146px;
  }

  .navs {
    display: flex;
    justify-content: space-between;
  }

  @media screen and (max-width: 50em) {
    .navigate {
      margin-top: 106px;
    }
    .navs {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
